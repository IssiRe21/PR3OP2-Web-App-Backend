                        <a class="nav-link" href="#">Mensajes</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="center">
        <h2>
            <%= post.username %>:
        </h2>
        <br>
        <h2>
            <%= post.content %>
        </h2>
        <hr>
        

        <h5>Comentarios:</h5>
        <% comments.forEach((comment)=> { %>
            <div>
                <%= comment.name %>:
                    <br>
                    <%= comment.comment %>
                    <br><br>
            </div>
            
            <% }); %>
            <hr>
                

